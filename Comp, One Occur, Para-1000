#include <stdlib.h>
#include <stdio.h>
#include <time.h>
#include <math.h>

int compcount = 0;

int deter0(int *a, int low, int high, int x);
int deteri(int *a, int low, int high, int x, int i);

int main()
{
    int i;
    FILE *fdeteri;
    
    fdeteri = fopen("deteri.dat", "w");
    
    srand(time(NULL));
    for(i = 0; i <= 19; i++){
        
        int *a;
        int j;
        int x;
        int k, y;
        
        a = (int*) malloc(1000 * sizeof(int));
        
        for(j = 0; j < 1000; j++)
            a[j] = j+1;
        
        x = a[999];
        
        y = deteri(a, 0, 999, x, i);
        fprintf(fdeteri, "(%d, %d), ", i, compcount);
        compcount = 0;
        
    }

    fclose(fdeteri);
}

int deter0(int *a, int low, int high, int x) /* this is the deterministic algorithm */
{
    
    int i;
        for(i = low; i <= high; i++){
            compcount++;
            if(a[i] == x)
                return 1;
        }
        
        return 0;
}

int deteri(int *a, int low, int high, int x, int i)
{
    
    if(high-low+1==1){
        compcount++;
        return (a[low] == x) ? 1 : 0;
    }
    
    if(i==0)
        return deter0(a, low, high, x);
    
    int k, mid;
    
    k = rand() % 2;
    mid = (low+high)/2;
    
        if(k==0){
            if(deteri(a, low, mid, x, i-1))
                return 1;
            
            if(deteri(a, mid+1, high, x, i-1))
                return 1;
            
            return 0;
        }
        
        if(k==1){
            if(deteri(a, mid+1, high, x, i-1))
                return 1;
            
            if(deteri(a, low, mid, x, i-1))
                return 1;
            
            return 0;
        }
}

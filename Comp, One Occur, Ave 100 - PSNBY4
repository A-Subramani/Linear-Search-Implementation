#include <stdlib.h>
#include <stdio.h>
#include <time.h>
#include <math.h>

int compcount = 0;

int deter0(int *a, int low, int high, int x);
int deter1(int *a, int low, int high, int x);
int ave(int *b, int sizeb);

int main()
{
    int i;
    FILE *fdeter1;
    
    fdeter1 = fopen("deter1.dat", "w");
    
    srand(time(NULL));
    for(i = 100; i <= 100000; i=i+100){
        
        int *a;
        int j;
        int x;
        int y;
        
        a = (int*) malloc(i * sizeof(int));
        
        for(j = 0; j < i; j++)
            a[j] = j+1;
        
        x = a[i-1];
        
        int b[100];
        
        for(j = 0; j < 100; j++){
            y = deter1(a, 0, i-1, x);
            b[j] = compcount;
            compcount = 0;
        }
        
        fprintf(fdeter1, "(%d, %d), ", i, ave(b, 100));
        compcount = 0;
        
        }

    fclose(fdeter0);
    fclose(fdeter1);
    fclose(fdeter2);
    fclose(fdeterlgn);
}

int deter0(int *a, int low, int high, int x) /* Deterministic algorithm */
{
    
    int i;
        for(i = low; i <= high; i++){
            compcount++;
            if(a[i] == x)
                return 1;
        }
        
        return 0;
}

int deter1(int *a, int low, int high, int x) /* Algorithm 2.2 */
{
    
    if(high-low+1==1){
        compcount++;
        return (a[low] == x) ? 1 : 0;
    }
    
    int k, mid;
    
    k = rand() % 2;
    mid = (low+high)/2;
    
        if(k==0){
            if(deter0(a, low, mid, x))
                return 1;
            
            if(deter0(a, mid+1, high, x))
                return 1;
            
            return 0;
        }
        
        if(k==1){
            if(deter0(a, mid+1, high, x))
                return 1;
            
            if(deter0(a, low, mid, x))
                return 1;
            
            return 0;
        }
}

int deter2(int *a, int low, int high, int x) /* Algorithm 2.3 */
{
    
    if(high-low+1==1){
        compcount++;
        return (a[low] == x) ? 1 : 0;
    }
    
    int k, mid;
    
    k = rand() % 2;
    mid = (low+high)/2;
    
        if(k==0){
            if(deter1(a, low, mid, x))
                return 1;
            
            if(deter1(a, mid+1, high, x))
                return 1;
            
            return 0;
        }
        
        if(k==1){
            if(deter1(a, mid+1, high, x))
                return 1;
            
            if(deter1(a, low, mid, x))
                return 1;
            
            return 0;
        }
}

int ave(int *b, int sizeb) /* Average */
{
    
    int i;
    int sum;
    
    sum = 0;
    
    for(i = 0; i < sizeb; i++)
        sum = sum+b[i];
    
    return sum/sizeb;
}
